#! /bin/sh
# preinst script for mahara-apache2
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

case "$1" in
    install)
        CMD="psql"
        db_get mahara/db_host
        if [ -n "$RET" ];then
                CMD="$CMD -h$RET"
        fi
        db_get mahara/db_port
        if [ -n "$RET" ];then
                CMD="$CMD -p$RET"
        fi
        db_get mahara/db_user
        if [ -n "$RET" ];then
                CMD="$CMD -U$RET"
        fi
        db_get mahara/db_name
        if [ -n "$RET" ];then
                CMD="$CMD $RET"
        fi

        echo -n "Testing for database connectivity ..."
        if ( $CMD -c "SELECT TRUE;" >/dev/null 2>&1 );then
            echo " success"
        else
            echo " failed"
            echo "You need to ensure that the database exists and is accessible"
            echo ""

            for VAR in db_host db_port db_user db_name; do
                db_get mahara/$VAR
                TMP="$RET"
                db_reset mahara/$VAR
                db_set mahara/$VAR $TMP
            done

            exit 1
        fi
    ;;
    upgrade)
    ;;
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop
exit 0
